{
  "output": "repomix-output.xml",
  "include": [
    "frontend/**/*.{js,html,css,md}",
    "backend/**/*.{js,json}",
    "contracts/**/*.{sol,json,js}",
    "docs/**/*.md",
    "shared/**/*",
    "package.json",
    "README.md",
    ".env.example",
    ".gitignore",
    ".repomix.json"
  ],
  "ignore": [
    "node_modules/**",
    "**/node_modules/**",
    ".git/**",
    "**/.git/**",
    "docs/finallica/.git/**",
    "**/*.db",
    "**/*.lock",
    "dist/**",
    "build/**",
    "artifacts/**",
    "cache/**",
    "coverage/**",
    ".DS_Store",
    "*.log",
    ".claude/**",
    "repomix*.xml",
    "repomix*.txt"
  ],
  "style": {
    "directoryStructure": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "showLineNumbers": false
  }
}
